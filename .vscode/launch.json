{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "User",
            "request": "launch",
            "mainClass": "user.core/core.User",
            "projectName": "modules-core"
        },
        {
            "type": "java",
            "name": "CookBookApp",
            "request": "launch",
            "mainClass": "user.ui/ui.CookBookApp",
            "projectName": "modules-ui"
        },
        {
            "type": "java",
            "name": "App",
            "request": "launch",
            "mainClass": "user.ui/ui.App",
            "projectName": "modules-ui"
        },
        {
            "type": "java",
            "name": "MainApp",
            "request": "launch",
            "mainClass": "user.ui/ui.MainApp",
            "projectName": "modules-ui"
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch modules-template - multi-module, multi-package ",
            "request": "launch",
            "mainClass": "calc.ui/ui.App",
            "projectName": "modules-ui",
            "vmArgs": [
                "--add-opens",
                "calc.ui/ui=ALL-UNNAMED",
                "--add-exports",
                "javafx.graphics/com.sun.javafx.application=ALL-UNNAMED"
            ]
        }
    ]
}
